{
    "manifest_version": 2,
    "name": "Text Worm",
    "version": "0.1",
    "description": "An app which train you read faster. The real speed reading tool. ",
    "icons": {
      "128": "icon_16.png",
      "128": "icon_32.png",
      "128": "icon_48.png",
      "128": "icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "jquery.js",
                "content.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+Y"
            }
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon7.png",
        "default_popup": "popup.html",
        "default_title": "Text Worm (Shortcut key: Ctrl+Shift+Y)"
    }
}